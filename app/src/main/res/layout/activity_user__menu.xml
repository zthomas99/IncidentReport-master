<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="mobileproject.incidentreport.Activities.User_Menu">
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@id/toolbar"
        android:onClick="showMap"
        android:background="@drawable/mapicon"
        android:id="@+id/map_button"/>
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/mapbuttonlabel"
        android:layout_height="wrap_content"
        android:text="SHOW MAP"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@+id/map_button"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report"
        android:id="@+id/incident_report_button"
        android:background="@drawable/incident_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="reportIncident"
        android:textColor="#FFFFFF" />

</RelativeLayout>
